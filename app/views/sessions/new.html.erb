<div class="row signup-header">
  <div class="medium-4 medium-offset-1 columns">
    <h1>Login</h1>
  </div>
  <div class="medium-6 columns">
    <h5 class="signin-header">Don't have an account? <%= link_to "Sign Up", signup_path %></h5>
  </div>
</div>

<div class="row signup-panel">

    <div class="large-5 large-offset-1 medium-8 medium-offset-2 columns">
      <h3>Sign in:</h3>
      <%= form_tag('login', method: "post") do %>
        Username <%= text_field_tag :username %>
        Password <%= password_field_tag :password %>
        <%= submit_tag "Login", class: "button secondary" %>
      <% end %>
  </div>
  <div class="large-5 medium-10 columns">
        <h3>Or: </h3>
        <%= link_to "/auth/facebook" do %>
          <div class="my-button">
            <i class="fi-social-facebook"></i><span>Login with Facebook</span>
          </div>
        <% end %>
  </div>

</div>