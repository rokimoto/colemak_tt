<h1>Profile for <%= @user.username %></h1>

Name: <%= @user.first_name %> <%= @user.last_name %>
Email: <%= @user.email %>

<h3>High Scores</h3>
<ul>
<% @user.scores.each do |score| %>
<li><strong><%= Level.find(score.level_id).name %></strong>: <%= score.wpm %> WPM <strong><%= score.date_added %></strong></li>
<% end %>
</ul>

<% if current_user == @user %>
<%= link_to "Edit Profile", edit_user_path(@user), class: "button secondary" %>
<% end %>

<% if current_user.admin? || current_user == @user %>
<%= link_to "Delete Account", @user, method: :delete, data: {confirm: "Are you sure you want to delete this user?"}, class: "button" %> 

<% end %>