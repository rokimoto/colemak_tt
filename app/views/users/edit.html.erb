<div class="row">
  <div class="large-12 columns header">
    <h1>Edit Profile</h1>
  </div>
</div>
<div class="row">
  <div class="large-10 large-offset-1 columns">
    <%= form_for @user do |f| %>
      <%= f.label :first_name %> <%= f.text_field :first_name %>
      <%= f.label :last_name %> <%= f.text_field :last_name %>
      <%= f.label :email %> <%= f.email_field :email %>
      <label>New Password</label> <%= f.password_field :password %>
      <label>New Password Confirmation</label> <%= f.password_field :password_confirmation %>
      <%= f.submit "Update Profile", class: "button secondary" %>
    <% end %>

    <% if current_user.admin? || current_user == @user %>
    <%= link_to "Delete Account", @user, method: :delete, data: {confirm: "Are you sure you want to delete this user?"}, class: "button" %> 

    <% end %>
  </div>
</div>