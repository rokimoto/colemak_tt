<h1><%= @level.name %></h1>





<div class="container">
	<div class="box-wrapper">
		<div class="exercise-box" id="exerciseBox"><%= @level.content %></div>
		<div class="input-wrapper">
			<div class="input-box" id="inputBox">
			</div>
			<div class="hidden-box" id="hiddenBox">
			</div>
		</div>
	</div>
</div>




<%= link_to "Go Back", levels_path %>



<div id="myModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
	<h2 id="modalTitle">Good job!</h2>
	<p class="lead" id="modalWpm">
		<%= form_for [current_user, Score.new] do |f| %>
			<%= f.hidden_field :level_id, :value => @level.id %>
			<%= f.text_field :wpm, id: 'WpmBox' %>
			<%= f.submit class: "small button" %>
		<% end %>
	</p>
	<a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>

